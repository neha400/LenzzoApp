<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cart_item_lay"
    android:background="@drawable/boder_layout"
    android:layout_marginBottom="@dimen/_5sdp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/notify_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gry"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/notify_image"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@drawable/bag_image_boder"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/no_img" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/notification_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futuramediumbt"
                        android:textAllCaps="true"
                        android:layout_alignParentStart="true"
                        android:text="Notification Title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"/>
                    <TextView
                        android:id="@+id/notification_create_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/futuramediumbt"
                        android:text="Date"
                        android:layout_alignParentEnd="true"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/dimgray"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/notification_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/futuramediumbt"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Description"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </LinearLayout>

       <!-- <View
            android:id="@+id/view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height=".05dp"
            android:background="@color/dark_gry"
            android:layout_marginTop="@dimen/_5sdp"/>-->
    </LinearLayout>
</LinearLayout>
